<UserControl x:Class="UserControls.Input.KeyBoard.KeyButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             Name="Self"
             Tag="Key"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid PreviewMouseDown="Grid_PreviewMouseDown">
        <Border BorderBrush="#E1E5E6" Background="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=UserControl},Path=Background}" BorderThickness="2" x:Name="Border">
        </Border>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" 
                   Text="{Binding ElementName=Self, Path=Text}"
                   FontSize="{Binding  ElementName=Self, Path=FontSize}"
                   />
    </Grid>
</UserControl>
